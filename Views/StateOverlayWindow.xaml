<Window
    x:Class="TransliteratorWPF_Version.Views.StateOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TransliteratorWPF_Version.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="StateOverlayWindow1"
    Title="StateOverlayWindow"
    Width="auto"
    Height="auto"
    AllowsTransparency="True"
    Background="Transparent"
    ContentRendered="StateOverlayWindow1_ContentRendered"
    Focusable="False"
    Loaded="StateOverlayWindow1_Loaded"
    Opacity="0.5"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
        <Image
            x:Name="iconImg"
            Width="40"
            Height="40"
            Margin="0,0,0,0" />
        <Rectangle
            x:Name="stateRect"
            Width="20"
            Height="20"
            Margin="10,0,0,0"
            Fill="#FF52CE30"
            RadiusX="100"
            RadiusY="100" />
    </StackPanel>
</Window>